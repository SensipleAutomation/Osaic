WebElement selectedDateElement = browserDriver.findElement(By.xpath("//div[contains(@class,'datepicker__day--selected')]"));

// Get the text of the selected date
String date = selectedDateElement.getText();

// Convert the text to an integer, add 1, and convert it back to a string
int dat = Integer.parseInt(date) + 1;
String d = String.valueOf(dat);

// Find the element with the new date and click it
browserDriver.findElement(By.xpath("//div[text()='" + d + "']")).click();
