for (int i = 0; i < 10; i++) {
    try {
        // Click the button
        buttonToClick.click();

        // Wait for the target element to be clickable, timeout set to 2 seconds
        wait.withTimeout(java.time.Duration.ofSeconds(2))
                .until(ExpectedConditions.elementToBeClickable(targetElementLocator));

        // If the above line is reached, it means the target element is clickable
        // Click on the target element
        targetElementLocator.click();
        break; // Break out of the loop once the target element is found

    } catch (Exception e) {
        // Handle any exceptions or continue with the next iteration
        e.printStackTrace(); // Print the exception for debugging purposes
    }
