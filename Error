String randomMobileNumber = generateRandomMobileNumber();
        System.out.println("Random Mobile Number: " + randomMobileNumber);

        // Example of generating random email address
        String randomEmailAddress = generateRandomEmailAddress();
        System.out.println("Random Email Address: " + randomEmailAddress);
    }

    public static String generateRandomMobileNumber() {
        Random random = new Random();
        // Generating a 10-digit random mobile number
        StringBuilder mobileNumber = new StringBuilder("9"); // Assuming Indian mobile numbers starting with 9
        for (int i = 0; i < 9; i++) {
            mobileNumber.append(random.nextInt(10));
        }
        return mobileNumber.toString();
    }

    public static String generateRandomEmailAddress() {
        Random random = new Random();
        // Generating a random email address with a random number and a common domain
        String username = "user" + random.nextInt(1000); // Appending a random number to the username
        String domain = "@example.com"; // You can change this to your desired domain
        return username + domain;
    }
}



WebElement mobileNumberInput = driver.findElement(By.id("mobileNumber"));
mobileNumberInput.sendKeys(generateRandomMobileNumber());

// Assuming you have a WebElement representing an input field for email address
WebElement emailInput = driver.findElement(By.id("email"));
emailInput.sendKeys(generateRandomEmailAddress());
