WebElement sourceElement = driver.findElement(By.id("sourceElementId"));

        // Create an Actions object
        Actions actions = new Actions(driver);

        // Select the text in the source element (performing Ctrl+A)
        actions.keyDown(Keys.CONTROL).sendKeys("a").keyUp(Keys.CONTROL);

        // Perform the copy operation (performing Ctrl+C)
        actions.keyDown(Keys.CONTROL).sendKeys("c").keyUp(Keys.CONTROL);

        // Locate the element you want to paste into
        WebElement targetElement = driver.findElement(By.id("targetElementId"));

        // Click on the target element to focus on it
        targetElement.click();

        // Perform the paste operation (performing Ctrl+V)
        actions.keyDown(Keys.CONTROL).sendKeys("v").keyUp(Keys.CONTROL);

        // Build and perform the Actions sequence
        actions.build().perform();
