while (true) {
    try {
        // Click the refresh button
        refreshButton.click();

        // Click another button
        anotherButton.click();

        // Wait for the target element to be present, timeout set to 2 seconds
        wait.withTimeout(java.time.Duration.ofSeconds(2))
            .until(ExpectedConditions.presenceOfElementLocated(By.id("your_target_element_id"))); // Adjust the locator based on your scenario

        // If the above line is reached, it means the target element is found
        // Click on the target element
        targetElement.click();

        // Break out of the loop once the target element is found
        break;

    } catch (Exception e) {
        // Handle any exceptions or continue with the next iteration
        e.printStackTrace(); // Print the exception for debugging purposes
    }
