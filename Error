   @Test
    public void yourTestMethod() throws InterruptedException {
        performActions(backTOcases, "Back to Cases button");
        performActions(sch2Case, "Sch2 Case button");
        performActions(bookCase, "Book Case button");
        performActions(boBusCase, "Bo Bus Case button");

        // Allocation started here
        performActions(reviewcontractResponse, "reviewcontractResponse");
        performActions(backgroundcheckParentCase, "backgroundcheckParentCase");
        performActions(pullbackgroundDocuments, "pullbackgroundDocuments");
        performActions(loadICACase, "loadICACase");
    }

    private void performActions(WebElement element, String elementName) throws InterruptedException {
        ((JavascriptExecutor) driver).executeScript("arguments[0].scrollIntoView({block: 'center'});", element);
        Assert.assertTrue(isElementPresent(element), elementName + " is not present");
        element.click();
        reactions();
        Assert.assertTrue(isElementPresent(backTOcases), "Back to Cases button is not present");
        backTOcases.click();
        Thread.sleep(1000);
    }
