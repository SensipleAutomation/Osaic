 WebDriverWait wait = new WebDriverWait(driver, 10);

        // Define the refresh button element
        By refreshButtonLocator = By.id("your_refresh_button_id");

        // Define the element you are waiting for
        By targetElementLocator = By.id("your_target_element_id");

        // Continue refreshing until the target element is found
        while (true) {
            try {
                // Wait for the refresh button to be clickable
                WebElement refreshButton = wait.until(ExpectedConditions.elementToBeClickable(refreshButtonLocator));

                // Click the refresh button
                refreshButton.click();

                // Wait for the target element to be present
                wait.until(ExpectedConditions.presenceOfElementLocated(targetElementLocator));

                // If the above line is reached, it means the target element is found, break out of the loop
                break;
            } catch (Exception e) {
                // Handle any exceptions or continue with the next iteration
            }
