public String copymail() throws FilloException, InterruptedException, IOException {
    JavascriptExecutor js = (JavascriptExecutor) driver;
    js.executeScript("window.scrollTo(0, 0);");
    TestUtils.sleep(1000);
    WebElement element = mailInvited;
    return element.getText(); // Return the extracted email
}

public void logmail() throws FilloException, InterruptedException, IOException {
    String mail = copymail();
    synchronized (this) {
        Mail.sendKeys(mail);
    }
}
