	private void waitForVisibility(WebElement element) throws Error{
        new WebDriverWait(driver, 60)
             .until(ExpectedConditions.visibilityOf(element));
	}
	
	public boolean isAlertPresent() {
		try {
		driver.switchTo().alert();
		return true;
		}// try
		catch (Exception e) {
		return false;
		}// catch
		}

}
